# Application Settings
APP_NAME=PDFExtractor
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8002
API_PREFIX=/api/v1

# External Services
GROBID_URL=http://localhost:8070
PDFFIGURES2_PATH=  # Leave empty to use fallback methods (PyMuPDF + CV)
NOUGAT_MODEL_PATH=  # DISABLED: Heavy AI model removed for memory optimization

# Storage
PAPER_FOLDER=./paper
OUTPUT_FORMAT=json
STORE_LOCALLY=True
KEEP_INTERMEDIATE_FILES=False  # Changed to False to save memory

# Processing (Optimized for Memory)
MAX_WORKERS=2  # Reduced from 4
EXTRACTION_TIMEOUT=180  # Reduced from 300
OCR_LANGUAGE=eng
USE_GPU=False  # Changed to False to avoid GPU memory issues

# OCR Configuration (Lightweight only)
OCR_PROVIDER=tesseract  # Only Tesseract, no EasyOCR

# Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=1800  # Reduced from 3600

# RabbitMQ
RABBITMQ_USER=
RABBITMQ_PASSWORD=

# PDF Storage (B2)
B2_KEY_ID=
B2_APPLICATION_KEY=
B2_BUCKET_NAME=
B2_BUCKET_ID=

# Gemini API
GEMINI_API_KEY=

# Cloudinary Configuration
CLOUDINARY_URL=

# Memory Optimization Settings
ENABLE_HEAVY_MODELS=False  # Disable AI models
ENABLE_TABLE_TRANSFORMER=False  # Disable deep learning table extraction
ENABLE_NOUGAT_OCR=False  # Disable Nougat OCR
ENABLE_EASYOCR=False  # Disable EasyOCR